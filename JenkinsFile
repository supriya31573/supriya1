pipeline {
    agent any
    stages {
        stage('Test Docker') {
            steps {
                sh 'docker --version'  // Check Docker version
                sh 'docker ps'         // List running containers
            }
        }
        stage('Checkout') {
            steps {
                git branch: 'testjava', url: 'https://github.com/supriya31573/supriya1.git'
            }
        }
        stage('Build with Maven Docker') {
            steps {
                sh 'docker run --rm -v $(pwd):/app -w /app maven:3.8.4 mvn clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("goginenisupriya999/java-devops-demo:${env.BUILD_ID}")
                }
            }
        }
        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'docker-hub-credentials') {
                        docker.image("goginenisupriya999/java-devops-demo:${env.BUILD_ID}").push()
                    }
                }
            }
        }
    }
}
